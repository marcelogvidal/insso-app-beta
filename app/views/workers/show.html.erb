


<%= render partial: "elements/sidebar" %>

<div class="container-fluid">


  <%- model_class = Worker -%>
  <div class="page-header">
    <h3><%=t '.title', :default => [:'helpers.titles.new', 'Ficha del trabajador'], :model => model_class.model_name.human.titleize %></h3>
  </div>
  <div class="panel panel-default">
    <div class="panel-body">
      <div class="row">
        <div class="col-md-4">
          <div class="fieldset">
            <dl>
              <dt class="label label-primary"><%= model_class.human_attribute_name(:Trabajador) %></dt>
              <dd><pre class="prettyprint"><%= image_tag(@worker.picture, size:"200x200")  %></pre></dd>
              <%= image_tag "http://maps.google.com/maps/api/staticmap?size=400x300&sensor=false&zoom=16&markers=#{@worker.latitude}%2C#{@worker.longitude}" %>

            </dl>
          </div>
        </div>
        <div class="col-md-7 col-md-offset-1">
          <dt class="label label-primary"><%= model_class.human_attribute_name(:Nombre) %></dt>
          <dd><pre class="prettyprint"><%= @worker.name %></pre></dd>
          <dt class="label label-primary"><%= model_class.human_attribute_name(:rut) %></dt>
          <dd><pre class="prettyprint"><%= @worker.rut %></pre></dd>
          <dt class="label label-primary"><%= model_class.human_attribute_name(:Dirección) %></dt>
          <dd><pre class="prettyprint"><%= @worker.address %></pre></dd>
          <dt class="label label-primary"><%= model_class.human_attribute_name(:Compañía) %></dt>
          <dd><pre class="prettyprint"><%= @worker.company_id %></pre></dd>
          <dt class="label label-primary"><%= model_class.human_attribute_name(:División) %></dt>
          <dd><pre class="prettyprint"><%= @worker.division_id %></pre></dd>
          <dt class="label label-primary"><%= model_class.human_attribute_name(:Encuesta) %></dt>
          <dd><pre class="prettyprint"><%= @worker.bpstest_id %></pre></dd>
          <dt class="label label-primary"><%= model_class.human_attribute_name(:Archivo_medico) %></dt>
          <dd><pre class="prettyprint"><%= @worker.file %></pre></dd>
          

          <div class="form-group">
            <%= link_to t('.back', :default => t("helpers.links.volver")),
            workers_path, :class => 'btn btn-primary'  %>
            <%= link_to t('.edit', :default => t("helpers.links.actualizar")),
            edit_worker_path(@worker), :class => 'btn btn-success' %>
            <%= link_to t('.destroy', :default => t("helpers.links.borrar")),
            worker_path(@worker),
            :method => 'delete',
            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
            :class => 'btn btn-danger' %>

          </div>
        </div>
      </div>
    </div>
  </div>
