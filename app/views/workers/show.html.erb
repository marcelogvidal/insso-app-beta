



<%- model_class = Worker -%>
<div class="page-header">
  <h1><%=t '.title', :default => [:'helpers.titles.new', 'Ficha del trabajador'], :model => model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
    <dt class="label label-default"><%= model_class.human_attribute_name(:picture) %></dt>
      <dd><pre class="prettyprint"><%= image_tag(@worker.picture)  %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @worker.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:lastname) %></dt>
      <dd><pre class="prettyprint"><%= @worker.lastname %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:company_id) %></dt>
      <dd><pre class="prettyprint"><%= @worker.company_id %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:division_id) %></dt>
      <dd><pre class="prettyprint"><%= @worker.division_id %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:rut) %></dt>
      <dd><pre class="prettyprint"><%= @worker.rut %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:bpstest_id) %></dt>
      <dd><pre class="prettyprint"><%= @worker.bpstest_id %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:file) %></dt>
      <dd><pre class="prettyprint"><%= @worker.file %></pre></dd>

  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              workers_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_worker_path(@worker), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              worker_path(@worker),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
