<h1>Listing workers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Lastname</th>
      <th>Company</th>
      <th>Division</th>
      <th>Rut</th>
      <th>Bpstest</th>
      <th>File</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @workers.each do |worker| %>
      <tr>
        <td><%= worker.name %></td>
        <td><%= worker.lastname %></td>
        <td><%= worker.company %></td>
        <td><%= worker.division %></td>
        <td><%= worker.rut %></td>
        <td><%= worker.bpstest %></td>
        <td><%= worker.file %></td>
        <td><%= link_to 'Show', worker %></td>
        <td><%= link_to 'Edit', edit_worker_path(worker) %></td>
        <td><%= link_to 'Destroy', worker, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

