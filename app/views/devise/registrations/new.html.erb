
<div class="modal-dialog">
  <div class="modal-content">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">

      <h1 align="center"><%=t ".title", default: "Solicite acceso" %></h1>



        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-horizontal form-user"}) do |f| %>
        <%= devise_error_messages! %>



        <div class="form-group">
          <%= f.label :email, class: "form col-md-12 center-block" %>
          <div class="form col-md-12 center-block">
            <%= f.email_field :email, class: "text-field form-control", html: {spellcheck: "false"} %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :password, class: "form col-md-12 center-block" %>
          <div class="form col-md-12 center-block">
            <%= f.password_field :password, class: "text-field form-control", html: {autocomplete: "off"} %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, "Password Confirmation", class: "form col-md-12 center-block" %>
          <div class="form col-md-12 center-block">
            <%= f.password_field :password_confirmation, class: "text-field form-control", html: {autocomplete: "off"} %>
          </div>
        </div>

        <div class="form-group">
          <div class="form col-md-12 center-block">
            <%= f.submit "Enviar", class: "btn btn-lg btn-primary btn-block" %>
          </div>
        </div>

        <div class="form-group">
          <div class="form col-md-12 center-block">
            <%= render "devise/shared/links" %>

            <p align="center" class="copyright text-muted small">Copyright &copy; INSSO 2015. Todos los derechos reservados.
          </div>
        </div>

        <% end %>

      </div>

    </div>
  </div>

