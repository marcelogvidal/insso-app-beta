<div class="modal-dialog">
  <div class="modal-content">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">

        <h1 align="center"><%=t ".title", default: "Ingresa tu cuenta" %></h1>


        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-horizontal form-user"}) do |f| %>


        <div class="form-group">
          <%= f.label :email, class: "form col-md-12 center-block",  placeholder:"Email adress"%>
          <div class="form col-md-12 center-block">
            <%= f.email_field :email, class: "text-field form-control", html: {spellcheck: "false"} %>
          </div>
        </div>


        <div class="form-group">
          <%= f.label :password, class: "form col-md-12 center-block" %>
          <div class="form col-md-12 center-block">
            <%= f.password_field :password, class: "text-field form-control" , html: {autocomplete: "off"} %>
          </div>
        </div>

        <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <%= f.label :remember_me, "Recordarme", class: "form col-md-12 center-block" %>
          <div class="col-md-8">
            <%= f.check_box :remember_me %>
          </div>
        </div>
        <% end -%>

        <div class="form-group">
          <div class="form col-md-12 center-block">
            <%= f.submit "Iniciar sesiÃ³n", class: "btn btn-lg btn-primary btn-block" %>
          </div>
        </div>

        <div class="form-group">
          <div class="form col-md-12 center-block">
          
            <p align="center" class="copyright text-muted small">Copyright &copy; INSSO 2015. Todos los derechos reservados.
            </div>
          </div>

          <% end %>

        </div>

      </div>
    </div>
