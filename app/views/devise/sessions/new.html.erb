<div class="page-header">

  <div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
        <h1 align="center"><%=t ".title", default: "Ingrese a su cuenta" %></h1>


        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-horizontal form-user"}) do |f| %>


        <div class="form-group">
          <%= f.label :email, class: "control-label col-md-4" %>
          <div class="col-md-8">
            <%= f.email_field :email, class: "text-field form-control", html: {spellcheck: "false"} %>
          </div>
        </div>


        <div class="form-group">
          <%= f.label :password, class: "control-label col-md-4" %>
          <div class="col-md-8">
            <%= f.password_field :password, class: "text-field form-control", html: {autocomplete: "off"} %>
          </div>
        </div>

        <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <%= f.label :remember_me, "Recordarme", class: "control-label col-md-4" %>
          <div class="col-md-8">
            <%= f.check_box :remember_me %>
          </div>
        </div>
        <% end -%>

        <div class="form-group">
          <div class="col-md-offset-4 col-md-8">
            <%= f.submit "Iniciar sesiÃ³n", class: "btn btn-lg btn-primary btn-block" %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-offset-4 col-md-8">
            <%= render "devise/shared/links" %>
          </div>
        </div>

        <% end %>

      </div>

    </div>
  </div>

